{
  "Api": {
    "Title": "Kosmos Template Api",
    "Description": "This is an API Quickstart Template",
    "ContactName": "John Doe",
    "ContactEmail": "contact@domain.com",
    "ContactUrl": "https://domain.com/contact",
    "SwaggerEnabled": true,
    "Health": {
      "Enabled": true,
      "Route": "/healthz"
    }
  },
  "Security": {
    "ActiveSchemes": [
      "Basic",
      "ApiToken",
      "Bearer"
    ],
    "Basic": [
      {
        "Issuer": "*",
        "ClientCredentials": [
          {
            "ClientId": "client1",
            "ClientSecret": "secret1",
            "Scopes": [ "read", "write" ]
          },
          {
            "ClientId": "client2",
            "ClientSecret": "secret2"
          }
        ]
      }
    ],
    "ApiToken": [
      {
        "Issuer": "*",
        "ApiKey": "",
        "Scopes": [ "read", "write" ]
      }
    ],
    "Bearer": [
      {
        "Name": "ExternalProvider1",
        "Authority": "http://localhost:8180/realms/kosmos/protocol/openid-connect/auth",
        "Issuer": "http://localhost:8180/realms/kosmos",
        "Audience": "kosmos",
        "IsSSLRequired": false,
        "ActiveFlows": [ "PKCE", "ClientCredentials" ]
      }
    ]
  },
  "Databases": {
    "Default": {
      "Provider": "SQLServer",
      "Host": "localhost",
      "Port": 1433,
      "Database": "AppMain",
      "User": "sa",
      "Password": "A&VeryComplex123Password",
      "Options": {
        "TrustServerCertificate": true,
        "SslRequired": false,
        "RetryCount": 3,
        "CommandTimeoutSeconds": 30,
        "IsReadOnly": false,
        "EnableLogging": true
      }
    }
  },
  "Messaging": {
    "RabbitMq": {
      "Host": "exemple.com",
      "Port": 5672,
      "User": "user",
      "Password": "user",
      "VirtualHost": "/",
      "UseSsl": true,
      "RetryCount": 3,
      "HeartbeatSeconds": 60
    },
    "Kafka": {
      "BootstrapServers": "kafka1:9092,kafka2:9092",
      "SaslUser": "kafkaUser",
      "SaslPassword": "kafkaPassword",
      "SecurityProtocol": "SaslSsl"
    }
  },
  "Caching": {
    "Default": {
      "Host": "exemple.com",
      "Port": 5672,
      "User": "user",
      "Password": "user"
    }
  },
  "Mailing": {
    "Default": {
      "Host": "exemple.com",
      "PortApi": 5672,
      "PortSMTP": 15672,
      "User": "user",
      "Password": "user"
    }
  },
  "ExternalAPIs": {
    "Weather": {
      "Protocol": "http",
      "Host": "localhost",
      "Port": 7210,
      "RoutePrefix": "",
      "Security": {
        "ActiveSchemes": [
          "Basic",
          "ApiToken",
          "Bearer"
        ],
        "Basic": [
          {
            "Issuer": "*",
            "ClientCredentials": [
              {
                "ClientId": "client1",
                "ClientSecret": "secret1",
                "Scopes": [ "read", "write" ]
              },
              {
                "ClientId": "client2",
                "ClientSecret": "secret2"
              }
            ]
          }
        ],
        "ApiToken": [
          {
            "Issuer": "*",
            "ApiKey": "",
            "Scopes": [ "read", "write" ]
          }
        ],
        "Bearer": [
          {
            "Name": "ExternalProvider1",
            "Authority": "http://localhost:8180/realms/kosmos/protocol/openid-connect/auth",
            "Issuer": "http://localhost:8180/realms/kosmos",
            "Audience": "kosmos",
            "IsSSLRequired": false,
            "ActiveFlows": [ "PKCE", "ClientCredentials" ]
          }
        ]
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
